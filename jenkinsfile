@Library('common-templates')_

pipeline {
    agent any
    
    stages {
        stage("Clone Git Repo") {
            steps {
                script {
                    echo "Hello"
                    def checkoutCode = checkoutCode('https://github.com/octocat/Hello-World','master')            
                    echo $checkoutCode 
                }
            }
    
        }
        stage("Dummy Stage") {
            steps {
                script {
                    def sayHello = sayHello('yyj')
                    echo $sayHello
                }
            }

        }
    }
    post {
        always {
            steps{
               script {
                def cleanWorkspace = cleanWorkspace()
                echo $cleanWorkspace
            } 
            }
            
        }
    }
}